<section class="bg-dark text-white py-16" id="contact">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4 text-accent font-['Georgia']">Get In Touch</h2>
    <p class="text-center text-gray-300 max-w-3xl mx-auto mb-10">
      Have questions or ready to plan your retreat? Contact us today.
    </p>
    
    <div class="flex flex-col lg:flex-row gap-12 max-w-5xl mx-auto">
      <!-- Contact Form -->
      <div class="bg-dark/60 rounded-lg p-8 shadow-lg lg:w-2/3">
        <h3 class="text-xl font-bold mb-6 text-white">Send us a message</h3>
        
        <form class="space-y-6">
          <div>
            <label for="name" class="block mb-2 text-sm font-medium text-gray-300">Name</label>
            <input 
              type="text" 
              id="name" 
              class="w-full p-3 bg-gray-700/50 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:ring-accent focus:border-accent"
              placeholder="Your name"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block mb-2 text-sm font-medium text-gray-300">Email</label>
            <input 
              type="email" 
              id="email" 
              class="w-full p-3 bg-gray-700/50 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:ring-accent focus:border-accent"
              placeholder="Your email"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block mb-2 text-sm font-medium text-gray-300">Message</label>
            <textarea 
              id="message" 
              rows="5" 
              class="w-full p-3 bg-gray-700/50 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:ring-accent focus:border-accent"
              placeholder="Your message"
              required
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-secondary hover:bg-secondary/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
      
      <!-- Contact Information -->
      <div class="lg:w-1/3">
        <div class="mb-10">
          <h3 class="text-xl font-bold mb-6 text-white">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-primary/80 rounded-full h-10 w-10 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-white">Address</h4>
                <p class="text-gray-400 mt-1">3820 Logan Creek Ln.,<br>West Harrison, IN 47060</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-primary/80 rounded-full h-10 w-10 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-white">Phone</h4>
                <p class="text-gray-400 mt-1">(812) 637-3777</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-primary/80 rounded-full h-10 w-10 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-medium text-white">Email</h4>
                <p class="text-gray-400 mt-1">highergroundservice@gmail.com</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-xl font-bold mb-4 text-white">Business Hours</h3>
          <ul class="space-y-2 text-gray-400">
            <li>Monday - Friday: 9am - 5pm</li>
            <li>Saturday: 10am - 2pm</li>
            <li>Sunday: Closed</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Simple form validation and handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Get form values
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const message = document.getElementById('message').value;
        
        // Here you would normally send the data to your server
        // For now, just show an alert
        alert(`Thank you ${name}! Your message has been received. We will contact you shortly.`);
        
        // Reset form
        form.reset();
      });
    }
  });
</script>
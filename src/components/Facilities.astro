</section>

<style>
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  // Client-side JavaScript to handle the scrolling and modal functionality
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('facilities-container');
    const scrollLeftBtn = document.getElementById('scroll-left');
    const scrollRightBtn = document.getElementById('scroll-right');
    const facilityCards = document.querySelectorAll('.facility-card');
    const facilityModal = document.getElementById('facility-modal');
    const closeModalBtn = document.getElementById('close-modal');
    
    // Facility data
    const facilitiesData = {
      "dorms": {
        name: "Dorms",
        description: "Our comfortable dormitories provide group accommodations that foster fellowship and community. Each dorm is designed with retreat groups in mind, focusing on both comfort and functionality to enhance the retreat experience.",
        image: "/cottage-icon.png",
        features: [
          "Bunk-style accommodations",
          "Separate wings for male and female housing",
          "Common gathering spaces",
          "Climate controlled environment",
          "Proximity to main facilities"
        ],
        capacity: "Each dorm wing can accommodate up to 30 people, with a total capacity of 60 guests."
      },
      "lodge": {
        name: "Lodge",
        description: "Our flagship facility is designed for maximum comfort and connection with nature. The lodge offers a perfect blend of rustic charm and modern amenities, creating an inviting space for groups of all kinds.",
        image: "/lodge-icon.png",
        features: [
          "Comfortable private and semi-private rooms",
          "Stone fireplace in main gathering area",
          "Panoramic views of surrounding forest",
          "Multiple meeting spaces",
          "Outdoor deck and seating areas"
        ],
        capacity: "The Lodge can accommodate up to 40 overnight guests with flexible meeting space for 75 people."
      },
      "dining-hall": {
        name: "Dining Hall",
        description: "Our spacious dining hall is where groups gather for nourishing meals and fellowship. The warm, inviting atmosphere makes every meal a community experience that enhances your retreat.",
        image: "/utensils-icon.png",
        features: [
          "Commercial kitchen facilities",
          "Buffet-style serving area",
          "Large communal dining tables",
          "Scenic views while dining",
          "Accommodate special dietary needs"
        ],
        capacity: "The dining hall can serve up to 120 people at one time."
      },
      "life-center": {
        name: "Life Center",
        description: "Our Life Center is a versatile space perfect for large gatherings, worship sessions, and various activities. The modern design and flexible layout make it ideal for conferences, performances, and interactive events.",
        image: "/compass-icon.png",
        features: [
          "Professional sound and lighting system",
          "Stage area for presentations",
          "Flexible seating arrangements",
          "Breakout meeting rooms",
          "Indoor recreational options"
        ],
        capacity: "The Life Center can accommodate up to 200 people in auditorium-style seating or 150 with tables."
      },
      "outback-lodge": {
        name: "Outback Lodge",
        description: "The Outback Lodge offers a rustic retreat space nestled deeper in nature for a more secluded experience. This facility is perfect for groups seeking a deeper connection with the natural environment.",
        image: "/tent-icon.png",
        features: [
          "Secluded forest location",
          "Rustic but comfortable sleeping quarters",
          "Covered outdoor gathering space",
          "Dedicated campfire area",
          "Access to hiking trails"
        ],
        capacity: "The Outback Lodge accommodates up to 24 people in a more intimate setting."
      },
      "lower-lodge": {
        name: "Lower Lodge",
        description: "The Lower Lodge provides a cozy meeting space with scenic views, perfect for smaller gatherings. Its location offers both convenience and a sense of peaceful seclusion.",
        image: "/cottage-icon.png",
        features: [
          "Comfortable lounge furniture",
          "Kitchenette for light refreshments",
          "Dedicated restroom facilities",
          "Direct access to outdoor patio",
          "Cozy fireplace"
        ],
        capacity: "The Lower Lodge can accommodate meetings and gatherings for up to 35 people."
      },
      "the-barn": {
        name: "The Barn",
        description: "The Barn is our rustic multi-purpose space for activities, games, and indoor recreation. This renovated structure maintains its charming agricultural heritage while providing modern amenities for multiple uses.",
        image: "/campfire-icon.png",
        features: [
          "High ceilings with exposed beams",
          "Large open floor plan",
          "Game equipment available",
          "Indoor sports capabilities",
          "Heating for year-round use"
        ],
        capacity: "The Barn can accommodate activities for up to 75 people depending on setup."
      }
    };
    
    // Scrolling functionality
    if (container && scrollLeftBtn && scrollRightBtn) {
      const cardWidth = 320; // The width of each card (w-80) plus the gap
      
      scrollLeftBtn.addEventListener('click', () => {
        container.scrollBy({ left: -cardWidth, behavior: 'smooth' });
      });
      
      scrollRightBtn.addEventListener('click', () => {
        container.scrollBy({ left: cardWidth, behavior: 'smooth' });
      });
    }
    
    // Facility card click handling to open modal
    facilityCards.forEach(card => {
      card.addEventListener('click', () => {
        const facilityId = card.getAttribute('data-facility');
        const facilityData = facilitiesData[facilityId];
        
        if (facilityData) {
          // Fill the modal with data
          document.getElementById('modal-title').textContent = facilityData.name;
          document.getElementById('modal-description').textContent = facilityData.description;
          document.getElementById('modal-capacity').textContent = facilityData.capacity;
          
          // Set the image
          const modalImg = document.getElementById('modal-image');
          modalImg.src = facilityData.image;
          modalImg.alt = facilityData.name;
          
          // Clear and populate features
          const featuresList = document.getElementById('modal-features');
          featuresList.innerHTML = '';
          facilityData.features.forEach(feature => {
            const li = document.createElement('li');
            li.textContent = feature;
            featuresList.appendChild(li);
          });
          
          // Show modal
          facilityModal.classList.remove('hidden');
          document.body.classList.add('overflow-hidden');
        }
      });
    });
    
    // Close modal button
    if (closeModalBtn) {
      closeModalBtn.addEventListener('click', () => {
        facilityModal.classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
      });
      
      // Close on backdrop click
      facilityModal.addEventListener('click', (e) => {
        if (e.target === facilityModal) {
          facilityModal.classList.add('hidden');
          document.body.classList.remove('overflow-hidden');
        }
      });
      
      // Close on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !facilityModal.classList.contains('hidden')) {
          facilityModal.classList.add('hidden');
          document.body.classList.remove('overflow-hidden');
        }
      });
    }
  });
</script>
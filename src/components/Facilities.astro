<section class="bg-light py-16" id="facilities">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4 text-primary font-['Georgia']">Our Facilities</h2>
    <p class="text-center text-gray-600 max-w-3xl mx-auto mb-8">
      Discover our range of modern facilities designed to create the perfect retreat experience.
    </p>
    
    <div class="relative">
      <!-- Scroll controls -->
      <div class="absolute top-1/2 -left-4 -translate-y-1/2 z-10">
        <button id="scroll-left" class="bg-dark hover:bg-primary text-white p-3 rounded-full shadow-lg transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
      </div>
      <div class="absolute top-1/2 -right-4 -translate-y-1/2 z-10">
        <button id="scroll-right" class="bg-dark hover:bg-primary text-white p-3 rounded-full shadow-lg transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
      
      <!-- Scrollable facilities container -->
